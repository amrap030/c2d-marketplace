{
  "name": "@amrap030/c2d-marketplace",
  "version": "0.0.0",
  "author": "Kevin Hertwig <kevin.hertwig@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/amrap030/c2d-marketplace#readme",
  "workspaces": [
    "src/*"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amrap030/c2d-marketplace.git"
  },
  "bugs": {
    "url": "https://github.com/amrap030/c2d-marketplace/issues"
  },
  "keywords": [
    "blockchain",
    "compute-to-data",
    "marketplace"
  ],
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git cz",
    "decrypt": "sops --decrypt ./encrypted.env > ./.env",
    "prepare": "husky install",
    "release": "npx bumpp package.json ./src/**/package.json --execute 'yarn changelog' --all"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/node": "^17.0.32",
    "bumpp": "^8.2.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.3.5",
    "eslint": "^8.18.0",
    "esno": "^0.16.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.3",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,vue}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
