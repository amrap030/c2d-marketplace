{
  "name": "@c2d-trading/contracts",
  "version": "0.0.0",
  "author": "Kevin Hertwig",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "yarn run lint:contracts && yarn run lint:scripts",
    "lint:contracts": "solhint './contracts/**/*.sol'",
    "lint:scripts": "eslint",
    "lint:fix": "solhint './contracts/**/*.sol' --fix",
    "hh-node": "hardhat node",
    "compile": "hardhat compile",
    "flatten": "hardhat flatten ./contracts/test.sol > ./full/flattened.sol",
    "test": "hardhat test",
    "test-coverage": "hardhat coverage",
    "test-and-coverage": "hardhat test && hardhat coverage",
    "deploy-mumbai": "hardhat run --network mumbai scripts/1_deploy.ts",
    "deploy-polygon": "hardhat run --network polygon scripts/1_deploy.ts",
    "deploy-local": "hardhat run --network localhost scripts/1_deploy.ts",
    "deploy-splitter": "hardhat run --network mumbai scripts/6_deploy_splitter.ts",
    "verify-testnet": "hardhat verify --constructor-args config/ContractArguments.ts --network mumbai",
    "verify-splitter-testnet": "hardhat verify --constructor-args config/SplitterArguments.ts --network mumbai",
    "verify-mainnet": "hardhat verify --constructor-args config/ContractArguments.ts --network mainnet",
    "verify-splitter-mainnet": "hardhat verify --constructor-args config/SplitterArguments.ts --network mainnet"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^30.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.2.31",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "*"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0"
  }
}
